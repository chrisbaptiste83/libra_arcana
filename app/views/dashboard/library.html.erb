<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="mb-8">
    <nav class="mb-4 text-sm">
      <%= link_to "Dashboard", dashboard_path, class: "text-gray-500 hover:text-gold transition-colors" %>
      <span class="text-gray-700 mx-2">/</span>
      <span class="text-gray-400">My Library</span>
    </nav>
    <h1 class="font-heading text-3xl md:text-4xl font-bold gradient-gold-text mb-2">My Library</h1>
    <p class="text-gray-500">Your purchased ebooks</p>
  </div>

  <% if @download_accesses.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @download_accesses.each do |access| %>
        <div class="card-dark p-5 !transform-none">
          <div class="flex items-start gap-4">
            <div class="w-16 h-20 rounded bg-gray-800/50 overflow-hidden flex-shrink-0">
              <% if access.ebook.cover_image.attached? %>
                <%= image_tag access.ebook.cover_image, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-gray-600">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
                </div>
              <% end %>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-heading text-base font-semibold text-gray-200 truncate"><%= access.ebook.title %></h3>
              <p class="text-xs text-gray-500 mb-2"><%= access.ebook.author %></p>
              <p class="text-xs text-gray-600 mb-1">Downloaded: <%= access.download_count %> times</p>
              <p class="text-xs text-gray-600">Expires: <%= access.expires_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
          <div class="mt-4">
            <% if access.ebook.ebook_file.attached? %>
              <%= link_to secure_download_path(token: access.access_token), class: "btn-purple w-full text-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3"/></svg>
                Download
              <% end %>
            <% else %>
              <span class="block text-center text-xs text-gray-500 py-2">File not yet available</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20">
      <svg class="w-20 h-20 mx-auto mb-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
      <h3 class="font-heading text-2xl text-gray-400 mb-2">Your library is empty</h3>
      <p class="text-gray-600 mb-6">Purchase ebooks to see them here.</p>
      <%= link_to "Browse Ebooks", ebooks_path, class: "btn-gold" %>
    </div>
  <% end %>
</div>
