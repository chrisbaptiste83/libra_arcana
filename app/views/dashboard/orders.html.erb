<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="mb-8">
    <nav class="mb-4 text-sm">
      <%= link_to "Dashboard", dashboard_path, class: "text-gray-500 hover:text-gold transition-colors" %>
      <span class="text-gray-700 mx-2">/</span>
      <span class="text-gray-400">Order History</span>
    </nav>
    <h1 class="font-heading text-3xl md:text-4xl font-bold gradient-gold-text mb-2">Order History</h1>
    <p class="text-gray-500">All your past purchases</p>
  </div>

  <% if @orders.any? %>
    <div class="space-y-4">
      <% @orders.each do |order| %>
        <div class="card-dark p-6 !transform-none">
          <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-4">
            <div>
              <h3 class="font-heading text-lg font-semibold text-gray-200">Order #<%= order.id %></h3>
              <p class="text-sm text-gray-500"><%= order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            <div class="flex items-center gap-4 mt-2 sm:mt-0">
              <span class="badge-<%= order.status == 'completed' ? 'gold' : 'purple' %>"><%= order.status.capitalize %></span>
              <span class="text-lg font-bold text-gold">$<%= '%.2f' % order.total %></span>
            </div>
          </div>

          <div class="border-t border-gray-800/30 pt-4">
            <% order.order_items.each do |item| %>
              <div class="flex items-center justify-between py-2">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-10 rounded bg-gray-800/50 overflow-hidden flex-shrink-0">
                    <% if item.ebook.cover_image.attached? %>
                      <%= image_tag item.ebook.cover_image, class: "w-full h-full object-cover" %>
                    <% end %>
                  </div>
                  <%= link_to item.ebook.title, ebook_path(item.ebook), class: "text-sm text-gray-300 hover:text-gold transition-colors" %>
                </div>
                <span class="text-sm text-gray-400">$<%= '%.2f' % item.unit_price %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20">
      <h3 class="font-heading text-2xl text-gray-400 mb-2">No orders yet</h3>
      <p class="text-gray-600 mb-6">Your purchase history will appear here.</p>
      <%= link_to "Browse Ebooks", ebooks_path, class: "btn-gold" %>
    </div>
  <% end %>
</div>
