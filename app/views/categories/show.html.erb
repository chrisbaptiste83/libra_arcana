<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <!-- Header -->
  <div class="mb-10">
    <nav class="mb-4 text-sm">
      <%= link_to "Catalog", ebooks_path, class: "text-gray-500 hover:text-gold transition-colors" %>
      <span class="text-gray-700 mx-2">/</span>
      <span class="text-gray-400"><%= @category.name %></span>
    </nav>

    <h1 class="font-heading text-3xl md:text-4xl font-bold gradient-gold-text mb-3"><%= @category.name %></h1>
    <% if @category.description.present? %>
      <p class="text-gray-400 max-w-2xl"><%= @category.description %></p>
    <% end %>
  </div>

  <% if @ebooks.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @ebooks.each do |ebook| %>
        <%= render "shared/ebook_card", ebook: ebook %>
      <% end %>
    </div>

    <%= raw pagy_custom_nav(@pagy) %>
  <% else %>
    <div class="text-center py-20">
      <h3 class="font-heading text-xl text-gray-400 mb-2">No ebooks in this category yet</h3>
      <p class="text-sm text-gray-600 mb-4">Check back soon for new additions.</p>
      <%= link_to "Browse All Ebooks", ebooks_path, class: "btn-outline-gold" %>
    </div>
  <% end %>
</div>
