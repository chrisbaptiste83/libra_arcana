<nav class="sticky top-0 z-40 border-b border-gray-800/50 bg-gray-950/90 backdrop-blur-md" data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center gap-2 group" do %>
          <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
          <span class="text-xl font-heading font-bold gradient-gold-text">Libra Arcana</span>
        <% end %>
      </div>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-6">
        <%= link_to "Catalog", ebooks_path, class: "text-sm text-gray-300 hover:text-gold transition-colors" %>
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="text-sm text-gray-300 hover:text-gold transition-colors flex items-center gap-1">
            Categories
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute top-full left-0 mt-2 w-48 rounded-lg border border-gray-800/50 bg-gray-900/95 backdrop-blur-md shadow-xl py-1 z-50">
            <% Category.order(:name).each do |category| %>
              <%= link_to category.name, category_path(slug: category.slug), class: "block px-4 py-2 text-sm text-gray-300 hover:text-gold hover:bg-gray-800/50 transition-colors" %>
            <% end %>
          </div>
        </div>
        <%= link_to "About", about_path, class: "text-sm text-gray-300 hover:text-gold transition-colors" %>
        <%= link_to "Contact", contact_path, class: "text-sm text-gray-300 hover:text-gold transition-colors" %>
      </div>

      <!-- Right side -->
      <div class="flex items-center gap-4">
        <!-- Cart -->
        <%= link_to cart_path, data: { turbo_prefetch: false }, class: "relative text-gray-300 hover:text-gold transition-colors" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
          <% if cart_count > 0 %>
            <span class="absolute -top-2 -right-2 w-5 h-5 flex items-center justify-center text-xs font-bold rounded-full bg-gold text-gray-950"><%= cart_count %></span>
          <% end %>
        <% end %>

        <% if user_signed_in? %>
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="flex items-center gap-2 text-sm text-gray-300 hover:text-gold transition-colors">
              <div class="w-8 h-8 rounded-full bg-mystic-purple/30 border border-mystic-purple/50 flex items-center justify-center">
                <span class="text-xs font-semibold text-mystic-purple-light"><%= current_user.first_name&.first&.upcase %></span>
              </div>
              <span class="hidden sm:inline"><%= current_user.first_name %></span>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 top-full mt-2 w-48 rounded-lg border border-gray-800/50 bg-gray-900/95 backdrop-blur-md shadow-xl py-1 z-50">
              <%= link_to "Dashboard", dashboard_path, class: "block px-4 py-2 text-sm text-gray-300 hover:text-gold hover:bg-gray-800/50 transition-colors" %>
              <%= link_to "My Library", dashboard_library_path, class: "block px-4 py-2 text-sm text-gray-300 hover:text-gold hover:bg-gray-800/50 transition-colors" %>
              <%= link_to "Order History", dashboard_orders_path, class: "block px-4 py-2 text-sm text-gray-300 hover:text-gold hover:bg-gray-800/50 transition-colors" %>
              <% if current_user.admin? %>
                <div class="border-t border-gray-800/50 my-1"></div>
                <%= link_to "Admin Panel", admin_dashboard_path, class: "block px-4 py-2 text-sm text-mystic-purple-light hover:bg-gray-800/50 transition-colors" %>
              <% end %>
              <div class="border-t border-gray-800/50 my-1"></div>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-red-400 hover:bg-gray-800/50 transition-colors" %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "text-sm text-gray-300 hover:text-gold transition-colors" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn-gold text-sm" %>
        <% end %>

        <!-- Mobile menu button -->
        <button data-action="click->mobile-menu#toggle" class="md:hidden text-gray-300 hover:text-gold">
          <svg data-mobile-menu-target="openIcon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
          <svg data-mobile-menu-target="closeIcon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div data-mobile-menu-target="menu" class="hidden md:hidden border-t border-gray-800/50 bg-gray-950/95 backdrop-blur-md">
    <div class="px-4 py-3 space-y-2">
      <%= link_to "Catalog", ebooks_path, class: "block py-2 text-gray-300 hover:text-gold transition-colors" %>
      <%= link_to "About", about_path, class: "block py-2 text-gray-300 hover:text-gold transition-colors" %>
      <%= link_to "Contact", contact_path, class: "block py-2 text-gray-300 hover:text-gold transition-colors" %>
      <div class="border-t border-gray-800/50 pt-2 mt-2">
        <p class="text-xs text-gray-500 uppercase tracking-wider mb-2">Categories</p>
        <% Category.order(:name).each do |category| %>
          <%= link_to category.name, category_path(slug: category.slug), class: "block py-1.5 text-sm text-gray-400 hover:text-gold transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
