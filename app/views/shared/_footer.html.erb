<footer class="border-t border-gray-800/50 bg-gray-950 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <svg class="w-7 h-7 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
          <span class="text-lg font-heading font-bold gradient-gold-text">Libra Arcana</span>
        </div>
        <p class="text-sm text-gray-500 leading-relaxed">Your gateway to ancient wisdom and mystical knowledge. Digital ebooks for the modern seeker.</p>
      </div>

      <!-- Browse -->
      <div>
        <h4 class="font-heading text-gold text-sm font-semibold uppercase tracking-wider mb-4">Browse</h4>
        <ul class="space-y-2">
          <li><%= link_to "All Ebooks", ebooks_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <li><%= link_to "Astrology", category_path(slug: "astrology"), class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <li><%= link_to "Tarot", category_path(slug: "tarot"), class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <li><%= link_to "Alchemy", category_path(slug: "alchemy"), class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <li><%= link_to "Divination", category_path(slug: "divination"), class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-heading text-gold text-sm font-semibold uppercase tracking-wider mb-4">Company</h4>
        <ul class="space-y-2">
          <li><%= link_to "About Us", about_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <li><%= link_to "Contact", contact_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
        </ul>
      </div>

      <!-- Account -->
      <div>
        <h4 class="font-heading text-gold text-sm font-semibold uppercase tracking-wider mb-4">Account</h4>
        <ul class="space-y-2">
          <% if user_signed_in? %>
            <li><%= link_to "Dashboard", dashboard_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
            <li><%= link_to "My Library", dashboard_library_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
            <li><%= link_to "Order History", dashboard_orders_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
            <li><%= link_to "Create Account", new_user_registration_path, class: "text-sm text-gray-500 hover:text-gold transition-colors" %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800/30 mt-8 pt-8 text-center">
      <p class="text-xs text-gray-600">&copy; <%= Date.current.year %> Libra Arcana. All rights reserved. Crafted for seekers of hidden knowledge.</p>
    </div>
  </div>
</footer>
