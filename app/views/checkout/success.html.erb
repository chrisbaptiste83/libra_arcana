<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
  <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-emerald-900/30 border border-emerald-700/30 flex items-center justify-center">
    <svg class="w-10 h-10 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
  </div>

  <h1 class="font-heading text-3xl md:text-4xl font-bold gradient-gold-text mb-4">Purchase Complete!</h1>
  <p class="text-gray-400 mb-8">Thank you for your purchase. Your ebooks are ready for download.</p>

  <% if @download_accesses&.any? %>
    <div class="card-dark p-6 text-left mb-8">
      <h3 class="font-heading text-lg font-semibold text-gold mb-4">Your Downloads</h3>
      <div class="space-y-3">
        <% @download_accesses.each do |access| %>
          <div class="flex items-center justify-between py-2 border-b border-gray-800/30 last:border-0">
            <div>
              <p class="font-medium text-gray-200"><%= access.ebook.title %></p>
              <p class="text-xs text-gray-500">Expires: <%= access.expires_at.strftime("%B %d, %Y") %></p>
            </div>
            <% if access.ebook.ebook_file.attached? %>
              <%= link_to "Download", secure_download_path(token: access.access_token), class: "btn-purple text-xs !py-1.5 !px-3" %>
            <% else %>
              <span class="text-xs text-gray-500">File pending</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex flex-wrap justify-center gap-4">
    <%= link_to "Go to Library", dashboard_library_path, class: "btn-gold" %>
    <%= link_to "Continue Browsing", ebooks_path, class: "btn-outline-gold" %>
  </div>
</div>
