<h1 class="font-heading text-2xl font-bold gradient-gold-text mb-6">Users</h1>

<div class="card-dark overflow-hidden !transform-none">
  <table class="table-dark">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Joined</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="text-gray-200"><%= user.full_name %></td>
          <td class="text-gray-400 text-sm"><%= user.email %></td>
          <td><%= user.admin? ? '<span class="badge-gold">Admin</span>'.html_safe : "-" %></td>
          <td class="text-gray-500 text-sm"><%= user.created_at.strftime("%b %d, %Y") %></td>
          <td><%= link_to "View", admin_user_path(user), class: "text-sm text-gold hover:text-gold-light transition-colors" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= raw pagy_custom_nav(@pagy) %>
