<div class="max-w-md mx-auto px-4 py-16">
  <div class="text-center mb-8">
    <h1 class="font-heading text-3xl font-bold gradient-gold-text mb-2">Join Libra Arcana</h1>
    <p class="text-gray-500">Create your account and begin your journey</p>
  </div>

  <div class="card-dark p-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-6 p-4 rounded-lg bg-red-900/30 border border-red-700/30">
          <ul class="text-sm text-red-300 space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-5">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm text-gray-400 mb-1">First Name</label>
            <%= f.text_field :first_name, class: "input-dark", placeholder: "First" %>
          </div>
          <div>
            <label class="block text-sm text-gray-400 mb-1">Last Name</label>
            <%= f.text_field :last_name, class: "input-dark", placeholder: "Last" %>
          </div>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-dark", placeholder: "you@example.com" %>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">Password</label>
          <%= f.password_field :password, autocomplete: "new-password", class: "input-dark", placeholder: "Minimum 6 characters" %>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">Confirm Password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-dark", placeholder: "Repeat password" %>
        </div>

        <div>
          <%= f.submit "Create Account", class: "btn-gold w-full py-3" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Already have an account?
        <%= link_to "Sign in", new_user_session_path, class: "text-gold hover:text-gold-light transition-colors" %>
      </p>
    </div>
  </div>
</div>
