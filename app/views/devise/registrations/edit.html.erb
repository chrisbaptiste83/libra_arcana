<div class="max-w-md mx-auto px-4 py-16">
  <div class="text-center mb-8">
    <h1 class="font-heading text-3xl font-bold gradient-gold-text mb-2">Edit Profile</h1>
    <p class="text-gray-500">Update your account settings</p>
  </div>

  <div class="card-dark p-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-6 p-4 rounded-lg bg-red-900/30 border border-red-700/30">
          <ul class="text-sm text-red-300 space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-5">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm text-gray-400 mb-1">First Name</label>
            <%= f.text_field :first_name, class: "input-dark" %>
          </div>
          <div>
            <label class="block text-sm text-gray-400 mb-1">Last Name</label>
            <%= f.text_field :last_name, class: "input-dark" %>
          </div>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">Email</label>
          <%= f.email_field :email, class: "input-dark" %>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">New Password <span class="text-gray-600">(leave blank to keep current)</span></label>
          <%= f.password_field :password, autocomplete: "new-password", class: "input-dark" %>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">Confirm New Password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-dark" %>
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-1">Current Password <span class="text-gold">*</span></label>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input-dark" %>
          <p class="text-xs text-gray-600 mt-1">Required to confirm changes</p>
        </div>

        <div>
          <%= f.submit "Update Profile", class: "btn-gold w-full py-3" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
