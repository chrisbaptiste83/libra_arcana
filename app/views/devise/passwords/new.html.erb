<div class="max-w-md mx-auto px-4 py-16">
  <div class="text-center mb-8">
    <h1 class="font-heading text-3xl font-bold gradient-gold-text mb-2">Reset Password</h1>
    <p class="text-gray-500">Enter your email to receive reset instructions</p>
  </div>

  <div class="card-dark p-8">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="space-y-5">
        <div>
          <label class="block text-sm text-gray-400 mb-1">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-dark", placeholder: "you@example.com" %>
        </div>

        <div>
          <%= f.submit "Send Reset Instructions", class: "btn-gold w-full py-3" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Remember your password?
        <%= link_to "Sign in", new_user_session_path, class: "text-gold hover:text-gold-light transition-colors" %>
      </p>
    </div>
  </div>
</div>
